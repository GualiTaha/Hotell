@model HotelGestion.Models.Client

<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<link href="~/Content/css/addChambre.css" rel="stylesheet" />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <h1 class="well">
            <img src="~/Images/Logo.png" />&nbsp; &nbsp; Inscription
        </h1>
        <div class="col-lg-12 well">
            <div class="row">
                <form>
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label>Nom :</label>
                            @Html.EditorFor(model => model.Nom, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="row">
                            <div class="col-sm-6 form-group">
                                <label>Prenom :</label>
                                @Html.EditorFor(model => model.Prenom, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Prenom, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-6 form-group">
                                <label>Votre Numéro de téléphone :</label>
                                @Html.EditorFor(model => model.Tel, new { htmlAttributes = new { @class = "form-control", @placeholder = "Options" } })
                                @Html.ValidationMessageFor(model => model.Tel, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-6 form-group">
                                <label>Adresse Mail :</label>
                                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Tel, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-sm-6 form-group">
                                <label>Mot de passe :</label>
                                @Html.EditorFor(model => model.Passwd, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Tel, "", new { @class = "text-danger" })
                            </div>
                        </div>


                     



                        <div class="text-center">
                            <input type="submit"
                                   value="Inscription"
                                   class="btn btn-success btn-lg btn-info" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

}




