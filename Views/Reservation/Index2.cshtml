@model IEnumerable<HotelGestion.Models.Reservation>
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<link href="~/Content/css/StyleSheet1.css" rel="stylesheet" />
@{
    ViewBag.Title = "Index2";
}





<div class="container" style="background-color:whitesmoke">
    <div class="row">
        <div class="col-lg-12">
            <div class="main-box clearfix">
                <div class="table-responsive">
                    <table class="table user-list">
                        <thead>
                            <tr>
                                <th><span> @Html.DisplayNameFor(model => model.Chambre.Numero)</span></th>
                                <th><span> @Html.DisplayNameFor(model => model.Chambre.ChambreType)</span></th>
                                <th class="text-center">@Html.DisplayNameFor(model => model.Chambre.Etat)</th>
                                <th><span> @Html.DisplayNameFor(model => model.DateDebut)</span></th>
                                <th><span> @Html.DisplayNameFor(model => model.DateFin)</span></th>



                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Chambre.Numero)
                                    </td>
                                    <td> @Html.DisplayFor(modelItem => item.Chambre.ChambreType) </td>
                                    <td>
                                        
                                        @if (item.Chambre.Etat == false)
                                        {
                                    <center><p class="card-text" style="background-color:green"> Libre </p></center>
                                                        }
                                                    else
                                                    { <center>
                                                            <p class="card-text"  style="background-color:orange">
                                                                Occupé(e)
                                                            </p>
                                                        </center>}

                                    </td>
                                    

                                    <td> @Html.DisplayFor(modelItem => item.DateDebut) </td>
                                    <td> @Html.DisplayFor(modelItem => item.DateFin) </td>

                                    

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>

